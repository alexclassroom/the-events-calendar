	.tribe-events-pro-week-grid__multiday-events-day {
		.tribe-events-pro-week-grid__multiday-event-bar {
			position: relative;
			padding-left: var(--tec-spacer-1);

			&:before {
				content: "";
				position: absolute;
				left: 0;
				top: 50%;
				transform: translateY(-50%);
				width: .5em;
				height: 100%;
				background-color: var(--tec-category-primary);
				border-radius: var(--tec-border-radius-month-multiday) 0 0 var(--tec-border-radius-month-multiday); /* Create a rounded left edge */
			}

			.tribe-events-pro-week-grid__multiday-event-bar-inner {
				padding: 1px var(--tec-spacer-1);
				background-color: var(--tec-category-secondary);
				transition: none;
			}

			.tribe-events-pro-week-grid__multiday-event-bar-featured-icon-svg {
				color: var(--tec-category-primary);
			}
		}
	}

	.tribe-events-pro-week-grid__event-link {
		background-color: var(--tec-category-secondary);
		color: var(--tec-category-text);
	}

	.tribe-events-pro-week-grid__event--past {
		.tribe-events-pro-week-grid__event-link-inner {
			background-color: var(--tec-category-secondary);
			color: var(--tec-category-text);
			transition: var(--tec-transition-background-color);
		}

		.tribe-events-pro-week-grid__event-link {
			.tribe-events-pro-week-grid__event-link-inner {
				&:hover {
					background-color: inherit;
					filter: contrast(85%);
				}
			}
		}
	}

	.tribe-events-pro-week-grid__event-title {
		color: var(--tec-category-text);
	}

	.tribe-events-pro-week-grid__event-datetime {
		color: var(--tec-category-text);
	}

	.tribe-events-pro-week-grid__event--featured {
		.tribe-events-pro-week-grid__event-datetime-featured-icon-svg,
		.tribe-events-pro-week-grid__event-datetime-featured-text {
			color: var(--tec-category-primary);
		}

		.tribe-events-pro-week-grid__event-link-inner {
			&:before {
				background-color: var(--tec-category-primary);
			}
		}
	}

	.tribe-events-pro-week-grid__event-link-inner {
		transition: var(--tec-transition-background-color);
		background-color: var(--tec-category-secondary);
	}

	.tribe-events-pro-week-grid__event-link {
		&:hover {
			.tribe-events-pro-week-grid__event-link-inner {
				filter: contrast(85%);
				background-color: inherit;
			}
		}

		&:before {
			background-color: var(--tec-category-primary);
			content: '';
			height: 100%;
			left: 0;
			position: absolute;
			top: 0;
			width: 3px;
		}
	}
}

